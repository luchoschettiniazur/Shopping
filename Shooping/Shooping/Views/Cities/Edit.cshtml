@model Shooping.Data.Entities.City
@*@model Shooping.Models.StateViewModel*@

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>
    Ciudad
</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="StateId" />

            <partial name="_CreateEdit" />

            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-controller="States" asp-action="Details" asp-route-id="@Model.StateId" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
