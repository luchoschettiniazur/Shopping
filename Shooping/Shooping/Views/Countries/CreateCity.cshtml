@model Shooping.Models.CityVm
@*@model Shooping.Models.StateViewModel*@

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Departamento/Estado</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateCity">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="city.StateId" />
            <partial name="_CityCreateEdit" />

            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="DetailsState" asp-route-id="@Model.city.StateId" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
