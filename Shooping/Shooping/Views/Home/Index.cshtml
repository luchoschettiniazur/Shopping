
@model IEnumerable<Shooping.Models.ProductsHomeViewModel>

@{
    ViewData["Title"] = "Index";
}


@*  OJO AQUI UTILIZAMOS EL CSS para la view ->Home ->Index.cshtml*@
@*  EL css esta añadido en el css compartido ->  site.css*@
@*  LAS CLASES AÑADIDAS:
.card
.card_title
.card_body
.card_foot
.foot a
.foot a:after
*@

@foreach (var item in Model)
{
    <div class="row">
        @if (item.Product1 != null)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card_title">@item.Product1.Name</div>
                    <div class="card_body">
                        @*La imagen van a tener un altura de 150px, pero si el ancho maximo puede llegar  280px 
                        esto se hace para que no se distorcionen las imagenes 
                        (asi intentara quedar lo mejor posible a los 150px de altura)*@
                        <img src="@item.Product1.ImageFullPath" style="height:150px; max-width:280px;" />
                        <p class="mt-2">
                            @item.Product1.Description
                            <h4>@Html.DisplayFor(modelItem => item.Product1.Price)</h4>
                        </p>
                    </div>
                    <div class="card_foot">
                        <a asp-action="Details" asp-route-id="@item.Product1.Id" class="btn btn-secondary">Detalles</a>
                        <a asp-action="Add" asp-route-id="@item.Product1.Id" class="btn btn-primary">Agregar</a>
                    </div>
                </div>
            </div>
        }
